.shop {
  widows: 100%;
  height: 180rpx;
  display: flex;
  background-color: #fff;
  margin-bottom: 10rpx;
  border-radius: 10rpx;
}
.shop .img {
  flex: 5;
  display: flex;
  flex-direction: column ;
  justify-content: center;
  align-items: center;
}
.shop .img image {
  width: 60%;
}
.shop .desc {
  flex: 5;
  display: flex;
  flex-wrap: wrap;
}
.shop .desc .name {
  width: 100%;
  height: 110rpx;
  padding: 5rpx 5rpx;
  overflow: hidden;
  word-wrap: break-word;
  text-overflow: ellipsis;
  font-size: 25rpx;
  color: #666666;
  display: flex;
  flex-direction: column ;
  justify-content: center;
  align-items: center;
}
.shop .desc .operating {
  width: 100%;
  height: 70rpx;
  display: flex;
}
.shop .desc .operating .price {
  flex: 1;
  color: var(--themeColor);
  display: flex;
  flex-direction: column ;
  justify-content: center;
  align-items: center;
}
.shop .desc .operating .number {
  flex: 1;
  padding: 7rpx 0rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
